<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.allthelucky.memo.persistence.MemoMapper">
	<insert id="addMemo" parameterType="Memo">
		insert into memo(userid,title,content,tag,createt,updatet) values(#{userid},#{title},#{content},#{tag},#{createt},#{updatet})
	</insert>
	
	<update id="updateMemo" parameterType="Memo">
		update memo set title=#{title},content=#{content},tag=#{tag},updatet=#{updatet} where id=#{id}
	</update>
	
	<delete id="delMemo" parameterType="int">
		delete from memo where id=#{id}
	</delete>
	
	<select id="getCount"  resultType="int">
		select count(*) from memo
	</select>
	
	<resultMap type="Memo" id="resultList">
		<result property="id"  column="id"/>
		<result property="userid"  column="userid"/>
		<result property="title"  column="title"/>
		<result property="content"  column="content"/>
		<result property="tag"  column="tag"/>
		<result property="createt"  column="createt"/>
		<result property="updatet"  column="updatet"/>
	</resultMap>
	
	<select id="getMemos" parameterType="hashMap" resultMap="resultList">
		select * from memo limit #{offset},#{size}
	</select>
</mapper>
