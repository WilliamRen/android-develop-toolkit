<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.allthelucky.memo.persistence.ReplyMapper">
	<insert id="addReply" parameterType="Reply">
		insert into reply(userid,sugestid,content,createtime) values(#{userid},#{sugestid},#{content},#{createtime})
	</insert>
	
	<select id="getCount"  resultType="int">
		select count(*) from reply
	</select>
	
	<resultMap type="Reply" id="resultList">
		<result property="id" column="id" />
		<result property="userid" column="userid" />
		<result property="sugestid" column="sugestid" />
		<result property="content" column="content" />
		<result property="createtime" column="createtime" />
	</resultMap>
	
	<select id="getReplys" parameterType="hashMap" resultMap="resultList">
		select * from reply limit #{offset},#{size}
	</select>
	
</mapper>