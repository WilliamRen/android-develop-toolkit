<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.allthelucky.memo.persistence.SugestMapper">
	<insert id="addSugest" parameterType="Sugest">
		insert into sugest(userid,content,createtime) values(#{userid},#{content},#{createtime})
	</insert>
	
	<select id="getCount"  resultType="int">
		select count(*) from sugest
	</select>
	
	<resultMap type="Sugest" id="resultList">
		<result property="id" column="id" />
		<result property="userid" column="userid" />
		<result property="content" column="content" />
		<result property="createtime" column="createtime" />
	</resultMap>
	
	<select id="getSugests" parameterType="hashMap" resultMap="resultList">
		select * from sugest limit #{offset},#{size}
	</select>
	
</mapper>