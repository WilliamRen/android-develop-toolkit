<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.allthelucky.memo.persistence.LogMapper">
	<insert id="addLog" parameterType="Log">
		insert into
		log(userid,createtime) values(#{userid},#{createtime})
	</insert>

	<select id="getCount" resultType="int">
		select count(*) from log
	</select>

	<resultMap type="Log" id="resultList">
		<result property="id" column="id" />
		<result property="userid" column="userid" />
		<result property="createtime" column="createtime" />
	</resultMap>

	<select id="getLogs" parameterType="hashMap" resultMap="resultList">
		select *
		from log limit #{offset},#{size}
	</select>

</mapper>