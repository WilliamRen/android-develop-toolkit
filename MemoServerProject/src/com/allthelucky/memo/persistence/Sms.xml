<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.allthelucky.memo.persistence.SmsMapper">
	<insert id="addSms" parameterType="Sms">
		insert into sms(mobile,code,createtime) values(#{mobile},#{code},#{createtime})
	</insert>
	
	<update id="updateSms" parameterType="Sms">
		update sms set code=#{code},createtime=#{createtime} where mobile=#{mobile}
	</update>
	
	<update id="deleteSms" parameterType="String">
		delete from sms where mobile=#{mobile}
	</update>
	
	<resultMap type="Sms" id="resultList">
		<result property="id" column="id" />
		<result property="mobile" column="mobile" />
		<result property="code" column="code" />
		<result property="createtime" column="createtime" />
	</resultMap>
	
	<select id="getSms" parameterType="String" resultMap="resultList">
		select * from sms where mobile=#{mobile} 
	</select>
	
</mapper>